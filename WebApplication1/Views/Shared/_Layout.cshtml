<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timetable Support System</title>
    <link href="~/Content/main-style.css" rel="stylesheet" type="text/css">
    <link href="~/fonts/font-awesome.css" rel="stylesheet" type="text/css">

    <script src= "~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
</head>
<body>

    <div id="header">
        <div id="logo">
            <img src="~/imgs/logo-lboro.png"/>
        </div>
        <div id="header-inner">
            <h1>Timetablers Support System</h1>
        </div>
    </div>
    <div id="nav-bar" align="center">
        <ul>
            <li><a href="~/Home/ViewRequests"><i class="fa fa-search"></i>View Requests</a></li>
            <li><a href="~/Home/CreateRequest"><i class="fa fa-plus-circle"></i>Create Request</a></li>
            <li><a href="~/Home/AdHocRequest"><i class="fa fa-pencil"></i>Ad-Hoc Request</a></li>
            <li><a href="~/Home/Help"><i class="fa fa-question-circle"></i>Help</a></li>
            <li><a href="~/Home/Settings"><i class="fa fa-cog"></i>Settings</a></li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>